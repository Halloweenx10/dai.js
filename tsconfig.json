{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "es6",
            "dom"
        ],
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}